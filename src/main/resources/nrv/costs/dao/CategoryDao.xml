<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nrv.costs.dao.CategoryDao">

    <insert id="insert" parameterType="nrv.costs.domain.Category">
        insert into category(id, type, tags)
        values((select max(id) + 1 from category), #{type}, #{tags})
    </insert>

</mapper>